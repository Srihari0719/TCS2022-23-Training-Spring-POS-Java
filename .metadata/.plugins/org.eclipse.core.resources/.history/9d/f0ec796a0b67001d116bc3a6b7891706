/**
 * 
 */
package com.tcs.bean;

import java.util.ArrayList;

/**
 * @author Administrator
 *
 */
public class GradeCard {
	private String username;
	private String studentName;
	private String courseGrades;
	private String courseName;
	private String grade;
	static ArrayList<GradeCard> gc = new ArrayList<>();
	static ArrayList<GradeCard> studentCourseGrades = new ArrayList<>();
	
	public GradeCard() {
		
	}
	public GradeCard(String username,String courseName, String grade) {
		this.username = username;
		this.courseName = courseName;
		this.grade = grade;
	}
	
	public GradeCard(String username, String courseGrades) {
		super();
		this.username = username;
		this.courseGrades = courseGrades;
	}
	
	public ArrayList<GradeCard> getStudentCourseGrades() {
		return studentCourseGrades;
	}
	public void setStudentCourseGrades(ArrayList<GradeCard> studentCourseGrades) {
		this.studentCourseGrades = studentCourseGrades;
	}
	public ArrayList<GradeCard> getGc() {
		return gc;
	}
	public void setGc(ArrayList<GradeCard> gc) {
		this.gc = gc;
	}
	public String getUsername() {
		return username;
	}
	public void setUsername(String username) {
		this.username = username;
	}
	public String getStudentName() {
		return studentName;
	}
	public void setStudentName(String studentName) {
		this.studentName = studentName;
	}
	public String getCourseGrades() {
		return courseGrades;
	}
	public void setCourseGrades(String courseGrades) {
		this.courseGrades = courseGrades;
	}
	public String getCourseName() {
		return courseName;
	}
	public void setCourseName(String courseName) {
		this.courseName = courseName;
	}
	public String getGrade() {
		return grade;
	}
	public void setGrade(String grade) {
		this.grade = grade;
	}
	
	/*
	 * @method : put()
	 * Adds the data
	 * 
	 */
	public void put() {
		
		gc.add(new GradeCard("upendra@gmail.com","C","A"));
		gc.add(new GradeCard("upendra@gmail.com","BEE","A"));
		gc.add(new GradeCard("sunitha@gmail.com","C","B"));
		gc.add(new GradeCard("sunitha@gmail.com","BEE","A"));
		
	}
	
	/*
	 * @method : viewReportCard()
	 * Display the report card of required user
	 * 
	 * @param : String username
	 */
	public void viewReportCard(String username) {
		System.out.println("Grade Card :");
		for(int i=0;i<studentCourseGrades.size();i++) {
			if(studentCourseGrades.get(i).getUsername().equals(username)) {
				System.out.println(studentCourseGrades.get(i).getCourseGrades());
				break;
			}
		}
	}
	
	/*
	 * @method : addGrades()
	 * Adds the grades of students to the enrolled course
	 * 
	 * @param : String username, String courseName, String grade
	 */
	public void addGrades(String username,String courseName, String grade) {
		gc.add(new GradeCard(username,courseName,grade));
	}
	public void generateReportCard(String student,String report) {
		studentCourseGrades.add(new GradeCard(student,report));
	}
}
